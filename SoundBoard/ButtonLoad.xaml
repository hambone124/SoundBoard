<Window x:Class="SoundBoard.ButtonLoad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoundBoard"
        mc:Ignorable="d"
        FocusManager.FocusedElement="{Binding ElementName=ButtonNumberTextBox}"
        Title="ButtonLoad" Height="150" Width="200">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Margin="5" VerticalAlignment="Top">
            <TextBlock TextWrapping="Wrap" Text="Load sound on button:"/>
            <TextBox x:Name="ButtonNumberTextBox" HorizontalAlignment="Stretch" Height="25" Margin="10" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="25" />
            <Button Content="Ok" Width="75" Click="OkButton_Click"/>

        </StackPanel>

    </Grid>
</Window>
